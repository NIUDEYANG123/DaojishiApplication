<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shanghai.daojishiapplication.MainActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="进度条!"
                android:layout_gravity="center_horizontal"
                />


            <TextView
                android:id="@+id/tv_invocation"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="动态代理"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:id="@+id/tv_annotation"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="获取注解"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_messenger"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="与独立进程service通信"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_start_app"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="启动其他app传递参数"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_broadcast"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="接收广播"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_disptach"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="事件分发"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_view"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="自定义view"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
